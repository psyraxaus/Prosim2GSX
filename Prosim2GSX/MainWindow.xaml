                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="Device Type:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <RadioButton x:Name="rbVhf1VoiceMeeterStrip" 
                                                    Content="Strip (Input)" 
                                                    Style="{StaticResource ModernRadioButtonStyle}"
                                                    Click="rbVhf1VoiceMeeterDeviceType_Click" 
                                                    IsChecked="True"/>
                                                <RadioButton x:Name="rbVhf1VoiceMeeterBus" 
                                                    Content="Bus (Output)" 
                                                    Style="{StaticResource ModernRadioButtonStyle}"
                                                    Click="rbVhf1VoiceMeeterDeviceType_Click"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Device Name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <ComboBox x:Name="cboVhf1VoiceMeeterStrip" 
                                                    Width="200" 
