<Window x:Class="Prosim2GSX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prosim2GSX"
        xmlns:serviceModel="clr-namespace:System.ServiceModel;assembly=System.ServiceModel"
        mc:Ignorable="d"
        Title="Prosim2GSX EFB" Height="781" Width="800" 
        ResizeMode="NoResize" 
        IsVisibleChanged="Window_IsVisibleChanged" 
        Closing="Window_Closing"
        Background="{DynamicResource ContentBackground}">
    <Window.Resources>
        <!-- Modern styles for controls -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#606060"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#1E90FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActiveTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="Foreground" Value="#1E90FF"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="#1E90FF"/>
        </Style>

        <Style x:Key="StatusLabelStyle" TargetType="Label">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#404040"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                             VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CategoryHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource CategoryText}"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="ModernCheckboxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="0,8,0,8"/>
            <Setter Property="Foreground" Value="{DynamicResource ContentText}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="ModernRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Margin" Value="0,8,15,8"/>
            <Setter Property="Foreground" Value="{DynamicResource ContentText}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SectionBackground}"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,8,0,10"/>
        </Style>

        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Background" Value="#F8F8F8"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="StatusIndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="14"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Header Section -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar with App Name and Navigation -->
        <Border Background="{DynamicResource HeaderBackground}" Grid.Row="0" Margin="0,0,0,-2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left side - App Title -->
                <TextBlock Grid.Column="0"
                   Text="PROSIM2GSX" 
                   FontWeight="Bold" 
                   FontSize="18" 
                   Foreground="{DynamicResource HeaderText}" 
                   VerticalAlignment="Center"
                   Margin="20,0,0,0"/>

                <!-- Center - Flight Number -->
                <TextBlock Grid.Column="1"
                   x:Name="FlightNumberDisplay" 
                   Text="No Flight" 
                   FontWeight="SemiBold" 
                   FontSize="16" 
                   Foreground="{DynamicResource HeaderText}" 
                   VerticalAlignment="Center"
                   HorizontalAlignment="Center"
                   Padding="10,5"
                   Background="{DynamicResource PrimaryColor}"
                   MinWidth="120"
                   TextAlignment="Center"/>

                <!-- Right side - Date and Navigation -->
                <StackPanel Grid.Column="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">

                    <!-- Navigation icons -->
                    <Button Style="{StaticResource TabButtonStyle}" 
                    Foreground="{DynamicResource HeaderText}"
                    Content="ðŸ”Š" 
                    FontSize="16" 
                    x:Name="btnAudioSettings"
                    Click="btnAudioSettings_Click"
                    ToolTip="Audio Settings"/>
                    <Button Style="{StaticResource TabButtonStyle}" 
                    Foreground="{DynamicResource HeaderText}"
                    Content="âš™" 
                    FontSize="16" 
                    x:Name="btnSettings"
                    Click="btnSettings_Click"
                    ToolTip="Settings"/>
                    <Button Style="{StaticResource TabButtonStyle}" 
                    Foreground="{DynamicResource HeaderText}"
                    Content="?" 
                    FontSize="16" 
                    x:Name="btnHelp"
                    Click="btnHelp_Click"
                    ToolTip="Help"/>

                    <!-- Date display -->
                    <TextBlock x:Name="CurrentDateTime" 
                       Text="17.11.2023" 
                       FontSize="14" 
                       Foreground="{DynamicResource HeaderText}" 
                       VerticalAlignment="Center"
                       Padding="10,5"
                       Background="{DynamicResource SecondaryColor}"
                       Margin="0,0,15,0"/>
                </StackPanel>
            </Grid>
        </Border>
        <!-- Main Content Area with TabControl -->
        <TabControl Grid.Row="1" 
                    BorderThickness="0"
                    Background="Transparent"
                    x:Name="MainTabControl">

            <!-- Flight Status Tab -->
            <TabItem Header="FLIGHT STATUS" x:Name="StatusTab">
                <StackPanel Margin="20,0,20,0" Height="655">
                        <!-- Connection Status -->
                        <TextBlock Text="CONNECTION STATUS" Style="{StaticResource CategoryHeaderStyle}"/>
                        <Border Style="{StaticResource SectionBorderStyle}">
                            <WrapPanel HorizontalAlignment="Center">
                                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                                    <Ellipse x:Name="MsfsStatusIndicator" Fill="Red" Style="{StaticResource StatusIndicatorStyle}"/>
                                    <Label Content="MSFS" Style="{StaticResource StatusLabelStyle}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                                    <Ellipse x:Name="SimConnectStatusIndicator" Fill="Red" Style="{StaticResource StatusIndicatorStyle}"/>
                                    <Label Content="SimConnect" Style="{StaticResource StatusLabelStyle}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                                    <Ellipse x:Name="ProsimStatusIndicator" Fill="Red" Style="{StaticResource StatusIndicatorStyle}"/>
                                    <Label Content="Prosim" Style="{StaticResource StatusLabelStyle}"/>
                                </StackPanel>

                                <StackPanel Orientation="Horizontal" Margin="0,0,10,0">
                                    <Ellipse x:Name="SessionStatusIndicator" Fill="Red" Style="{StaticResource StatusIndicatorStyle}"/>
                                    <Label Content="Session" Style="{StaticResource StatusLabelStyle}"/>
                                </StackPanel>
                            </WrapPanel>
                        </Border>

                        <!-- Flight Phase -->
                        <TextBlock Text="FLIGHT PHASE" Style="{StaticResource CategoryHeaderStyle}"/>
                        <Border Style="{StaticResource SectionBorderStyle}">
                            <StackPanel>
                                <Label x:Name="lblFlightPhase" 
                                       Content="AT GATE" 
                                       FontSize="18" 
                                       FontWeight="Bold" 
                                       HorizontalAlignment="Center"
                                       Foreground="{DynamicResource AtGatePhase}"/>

                                <!-- Progress Bar representing flight phases -->
                                <Grid Name="progressBar" Margin="0,0,0,0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="*"/>
                                    </Grid.ColumnDefinitions>

                                    <Border Grid.Column="0" Background="{DynamicResource AtGatePhase}" Height="8" CornerRadius="4,0,0,4" Margin="0,0,2,0"/>
                                    <Border Grid.Column="1" Background="{DynamicResource InactiveStatus}" Height="8" Margin="2,0"/>
                                    <Border Grid.Column="2" Background="{DynamicResource InactiveStatus}" Height="8" Margin="2,0"/>
                                    <Border Grid.Column="3" Background="{DynamicResource InactiveStatus}" Height="8" Margin="2,0"/>
                                    <Border Grid.Column="4" Background="{DynamicResource InactiveStatus}" Height="8" CornerRadius="0,4,4,0" Margin="2,0,0,0"/>

                                    <TextBlock Grid.Column="0" Text="AT GATE" HorizontalAlignment="Center" Margin="0,25,0,0" FontSize="11"/>
                                    <TextBlock Grid.Column="1" Text="TAXI OUT" HorizontalAlignment="Center" Margin="0,25,0,0" FontSize="11"/>
                                    <TextBlock Grid.Column="2" Text="IN FLIGHT" HorizontalAlignment="Center" Margin="0,25,0,0" FontSize="11"/>
                                    <TextBlock Grid.Column="3" Text="APPROACH" HorizontalAlignment="Center" Margin="0,25,0,0" FontSize="11"/>
                                    <TextBlock Grid.Column="4" Text="ARRIVED" HorizontalAlignment="Center" Margin="0,25,0,0" FontSize="11"/>
                                </Grid>
                            </StackPanel>
                        </Border>

                        <!-- Ground Services Status -->
                        <TextBlock Text="GROUND SERVICES" Style="{StaticResource CategoryHeaderStyle}"/>
                        <Border Style="{StaticResource SectionBorderStyle}">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!-- Service Status Indicators -->
                                <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Horizontal" Margin="0,3">
                                    <Ellipse x:Name="JetwayStatusIndicator" Fill="#E0E0E0" Style="{StaticResource StatusIndicatorStyle}"/>
                                    <TextBlock Text="Jetway" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal" Margin="0,3">
                                    <Ellipse x:Name="StairsStatusIndicator" Fill="#E0E0E0" Style="{StaticResource StatusIndicatorStyle}"/>
                                    <TextBlock Text="Stairs" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="0" Grid.Row="1" Orientation="Horizontal" Margin="0,3">
                                    <Ellipse x:Name="RefuelStatusIndicator" Fill="#E0E0E0" Style="{StaticResource StatusIndicatorStyle}"/>
                                    <TextBlock Text="Refueling" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="1" Orientation="Horizontal" Margin="0,3">
                                    <Ellipse x:Name="CateringStatusIndicator" Fill="#E0E0E0" Style="{StaticResource StatusIndicatorStyle}"/>
                                    <TextBlock Text="Catering" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="0" Grid.Row="2" Orientation="Horizontal" Margin="0,3">
                                    <Ellipse x:Name="BoardingStatusIndicator" Fill="#E0E0E0" Style="{StaticResource StatusIndicatorStyle}"/>
                                    <TextBlock Text="Boarding" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="2" Orientation="Horizontal" Margin="0,3">
                                    <Ellipse x:Name="DeboardingStatusIndicator" Fill="#E0E0E0" Style="{StaticResource StatusIndicatorStyle}"/>
                                    <TextBlock Text="Deboarding" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="0" Grid.Row="3" Orientation="Horizontal" Margin="0,3">
                                    <Ellipse x:Name="GPUStatusIndicator" Fill="#E0E0E0" Style="{StaticResource StatusIndicatorStyle}"/>
                                    <TextBlock Text="GPU" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="3" Orientation="Horizontal" Margin="0,3">
                                    <Ellipse x:Name="PCAStatusIndicator" Fill="#E0E0E0" Style="{StaticResource StatusIndicatorStyle}"/>
                                    <TextBlock Text="PCA" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="0" Grid.Row="4" Orientation="Horizontal" Margin="0,3">
                                    <Ellipse x:Name="PushbackStatusIndicator" Fill="#E0E0E0" Style="{StaticResource StatusIndicatorStyle}"/>
                                    <TextBlock Text="Pushback" VerticalAlignment="Center"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="4" Orientation="Horizontal" Margin="0,3">
                                    <Ellipse x:Name="ChocksStatusIndicator" Fill="#E0E0E0" Style="{StaticResource StatusIndicatorStyle}"/>
                                    <TextBlock Text="Chocks" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </Border>

                        <!-- Log Messages -->
                        <TextBlock Text="LOG MESSAGES" Style="{StaticResource CategoryHeaderStyle}"/>
                        <Border Style="{StaticResource SectionBorderStyle}" MinHeight="120" Height="136">
                            <ScrollViewer VerticalScrollBarVisibility="Auto" MaxHeight="120">
                                <TextBlock x:Name="txtLogMessages" TextWrapping="Wrap" Height="110"/>
                            </ScrollViewer>
                        </Border>
                    </StackPanel>
            </TabItem>

            <!-- Audio Settings Tab -->
            <TabItem Header="AUDIO SETTINGS" x:Name="AudioSettingsTab">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="AUDIO API" Style="{StaticResource CategoryHeaderStyle}"/>
                        <Border Style="{StaticResource SectionBorderStyle}">
                            <StackPanel>
                                <TextBlock Text="Select Audio API:" Margin="0,0,0,8"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <RadioButton x:Name="rbCoreAudio" 
                                        Content="Core Audio (Process Control)" 
                                        Style="{StaticResource ModernRadioButtonStyle}"
                                        Click="audioApi_Click" 
                                        IsChecked="True"/>

                                    <RadioButton x:Name="rbVoiceMeeter" 
                                        Content="VoiceMeeter API (Strip Control)" 
                                        Style="{StaticResource ModernRadioButtonStyle}"
                                        Click="audioApi_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
                        <!-- Volume Control -->
                        <TextBlock Text="AUDIO CONTROL PANEL CHANNELS" Style="{StaticResource CategoryHeaderStyle}"/>
                        <Border Style="{StaticResource SectionBorderStyle}">
                            <StackPanel>
                                <!-- INT Channel -->
                                <Expander Header="INT" IsExpanded="True" Margin="0,5">
                                    <StackPanel Margin="20,10,0,10">
                                        <CheckBox x:Name="chkIntVolumeControl" 
                                            Content="Control INT App Audio Volume via the INT Knob on ACP" 
                                            Style="{StaticResource ModernCheckboxStyle}"
                                            Click="chkIntVolumeControl_Click"/>

                                        <CheckBox x:Name="chkIntLatchMute" 
                                            Content="Use Record Latch to mute/unmute App (push/pull Knob)" 
                                            Style="{StaticResource ModernCheckboxStyle}"
                                            Margin="0,5,0,5"
                                            Click="chkIntLatchMute_Click"/>

                                        <!-- Core Audio fields -->
                                        <StackPanel x:Name="pnlIntCoreAudio" Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="Process Name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBox x:Name="txtIntVolumeApp" 
                                                Style="{StaticResource ModernTextBoxStyle}"
                                                Width="120" 
                                                LostFocus="txtIntVolumeApp_LostFocus" 
                                                KeyUp="txtIntVolumeApp_KeyUp"/>
                                            <TextBlock Text="(Comma-separated list of process names without .exe extension)" 
                                                VerticalAlignment="Center" 
                                                Margin="8,0,0,0"
                                                Foreground="#808080"/>
                                        </StackPanel>

                                        <!-- VoiceMeeter fields -->
                                        <StackPanel x:Name="pnlIntVoiceMeeter" Orientation="Vertical" Margin="0,5,0,0" Visibility="Collapsed">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="Device Type:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <RadioButton x:Name="rbIntVoiceMeeterStrip" 
                                                    Content="Strip (Input)" 
                                                    Style="{StaticResource ModernRadioButtonStyle}"
                                                    Click="rbIntVoiceMeeterDeviceType_Click" 
                                                    IsChecked="True"/>
                                                <RadioButton x:Name="rbIntVoiceMeeterBus" 
                                                    Content="Bus (Output)" 
                                                    Style="{StaticResource ModernRadioButtonStyle}"
                                                    Click="rbIntVoiceMeeterDeviceType_Click"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Device Name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <ComboBox x:Name="cboIntVoiceMeeterStrip" 
                                                    Width="200" 
                                                    SelectionChanged="cboIntVoiceMeeterStrip_SelectionChanged"
                                                    DisplayMemberPath="Value"
                                                    SelectedValuePath="Key"/>
                                                <Button x:Name="btnRefreshIntStrips" 
                                                    Content="Refresh" 
                                                    Margin="10,0,0,0"
                                                    Click="btnRefreshVoiceMeeterStrips_Click"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Expander>

                                <!-- VHF1 Channel -->
                                <Expander Header="VHF1" IsExpanded="True" Margin="0,5">
                                    <StackPanel Margin="20,10,0,10">
                                        <CheckBox x:Name="chkVhf1VolumeControl" 
                                            Content="Control VHF1 App Audio Volume via the VHF1 Knob on ACP" 
                                            Style="{StaticResource ModernCheckboxStyle}"
                                            Click="chkVhf1VolumeControl_Click"/>

                                        <CheckBox x:Name="chkVhf1LatchMute" 
                                            Content="Use Record Latch to mute/unmute App (push/pull Knob)" 
                                            Style="{StaticResource ModernCheckboxStyle}"
                                            Margin="0,5,0,5"
                                            Click="chkVhf1LatchMute_Click"/>

                                        <!-- Core Audio fields -->
                                        <StackPanel x:Name="pnlVhf1CoreAudio" Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="Process Name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBox x:Name="txtVhf1VolumeApp" 
                                                Style="{StaticResource ModernTextBoxStyle}"
                                                Width="120" 
                                                LostFocus="txtVhf1VolumeApp_LostFocus" 
                                                KeyUp="txtVhf1VolumeApp_KeyUp"/>
                                            <TextBlock Text="(Comma-separated list of process names without .exe extension)" 
                                                VerticalAlignment="Center" 
                                                Margin="8,0,0,0"
                                                Foreground="#808080"/>
                                        </StackPanel>

                                        <!-- VoiceMeeter fields -->
                                        <StackPanel x:Name="pnlVhf1VoiceMeeter" Orientation="Vertical" Margin="0,5,0,0" Visibility="Collapsed">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="Device Type:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <RadioButton x:Name="rbVhf1VoiceMeeterStrip" 
                                                    Content="Strip (Input)" 
                                                    Style="{StaticResource ModernRadioButtonStyle}"
                                                    Click="rbVhf1VoiceMeeterDeviceType_Click" 
                                                    IsChecked="True"/>
                                                <RadioButton x:Name="rbVhf1VoiceMeeterBus" 
                                                    Content="Bus (Output)" 
                                                    Style="{StaticResource ModernRadioButtonStyle}"
                                                    Click="rbVhf1VoiceMeeterDeviceType_Click"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Device Name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <ComboBox x:Name="cboVhf1VoiceMeeterStrip" 
                                                    Width="200" 
                                                    SelectionChanged="cboVhf1VoiceMeeterStrip_SelectionChanged"
                                                    DisplayMemberPath="Value"
                                                    SelectedValuePath="Key"/>
                                                <Button x:Name="btnRefreshVhf1Strips" 
                                                    Content="Refresh" 
                                                    Margin="10,0,0,0"
                                                    Click="btnRefreshVoiceMeeterStrips_Click"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Expander>

                                <!-- VHF2 Channel -->
                                <Expander Header="VHF2" IsExpanded="True" Margin="0,5">
                                    <StackPanel Margin="20,10,0,10">
                                        <CheckBox x:Name="chkVhf2VolumeControl" 
                                            Content="Control VHF2 App Audio Volume via the VHF2 Knob on ACP" 
                                            Style="{StaticResource ModernCheckboxStyle}"
                                            Click="chkVhf2VolumeControl_Click"/>

                                        <CheckBox x:Name="chkVhf2LatchMute" 
                                            Content="Use Record Latch to mute/unmute App (push/pull Knob)" 
                                            Style="{StaticResource ModernCheckboxStyle}"
                                            Margin="0,5,0,5"
                                            Click="chkVhf2LatchMute_Click"/>

                                        <!-- Core Audio fields -->
                                        <StackPanel x:Name="pnlVhf2CoreAudio" Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="Process Name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBox x:Name="txtVhf2VolumeApp" 
                                                Style="{StaticResource ModernTextBoxStyle}"
                                                Width="120" 
                                                LostFocus="txtVhf2VolumeApp_LostFocus" 
                                                KeyUp="txtVhf2VolumeApp_KeyUp"/>
                                            <TextBlock Text="(Comma-separated list of process names without .exe extension)" 
                                                VerticalAlignment="Center" 
                                                Margin="8,0,0,0"
                                                Foreground="#808080"/>
                                        </StackPanel>

                                        <!-- VoiceMeeter fields -->
                                        <StackPanel x:Name="pnlVhf2VoiceMeeter" Orientation="Vertical" Margin="0,5,0,0" Visibility="Collapsed">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="Device Type:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <RadioButton x:Name="rbVhf2VoiceMeeterStrip" 
                                                    Content="Strip (Input)" 
                                                    Style="{StaticResource ModernRadioButtonStyle}"
                                                    Click="rbVhf2VoiceMeeterDeviceType_Click" 
                                                    IsChecked="True"/>
                                                <RadioButton x:Name="rbVhf2VoiceMeeterBus" 
                                                    Content="Bus (Output)" 
                                                    Style="{StaticResource ModernRadioButtonStyle}"
                                                    Click="rbVhf2VoiceMeeterDeviceType_Click"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Device Name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <ComboBox x:Name="cboVhf2VoiceMeeterStrip" 
                                                    Width="200" 
                                                    SelectionChanged="cboVhf2VoiceMeeterStrip_SelectionChanged"
                                                    DisplayMemberPath="Value"
                                                    SelectedValuePath="Key"/>
                                                <Button x:Name="btnRefreshVhf2Strips" 
                                                    Content="Refresh" 
                                                    Margin="10,0,0,0"
                                                    Click="btnRefreshVoiceMeeterStrips_Click"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Expander>

                                <!-- VHF3 Channel -->
                                <Expander Header="VHF3" IsExpanded="True" Margin="0,5">
                                    <StackPanel Margin="20,10,0,10">
                                        <CheckBox x:Name="chkVhf3VolumeControl" 
                                            Content="Control VHF3 App Audio Volume via the VHF3 Knob on ACP" 
                                            Style="{StaticResource ModernCheckboxStyle}"
                                            Click="chkVhf3VolumeControl_Click"/>

                                        <CheckBox x:Name="chkVhf3LatchMute" 
                                            Content="Use Record Latch to mute/unmute App (push/pull Knob)" 
                                            Style="{StaticResource ModernCheckboxStyle}"
                                            Margin="0,5,0,5"
                                            Click="chkVhf3LatchMute_Click"/>

                                        <!-- Core Audio fields -->
                                        <StackPanel x:Name="pnlVhf3CoreAudio" Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="Process Name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBox x:Name="txtVhf3VolumeApp" 
                                                Style="{StaticResource ModernTextBoxStyle}"
                                                Width="120" 
                                                LostFocus="txtVhf3VolumeApp_LostFocus" 
                                                KeyUp="txtVhf3VolumeApp_KeyUp"/>
                                            <TextBlock Text="(Comma-separated list of process names without .exe extension)" 
                                                VerticalAlignment="Center" 
                                                Margin="8,0,0,0"
                                                Foreground="#808080"/>
                                        </StackPanel>

                                        <!-- VoiceMeeter fields -->
                                        <StackPanel x:Name="pnlVhf3VoiceMeeter" Orientation="Vertical" Margin="0,5,0,0" Visibility="Collapsed">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="Device Type:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <RadioButton x:Name="rbVhf3VoiceMeeterStrip" 
                                                    Content="Strip (Input)" 
                                                    Style="{StaticResource ModernRadioButtonStyle}"
                                                    Click="rbVhf3VoiceMeeterDeviceType_Click" 
                                                    IsChecked="True"/>
                                                <RadioButton x:Name="rbVhf3VoiceMeeterBus" 
                                                    Content="Bus (Output)" 
                                                    Style="{StaticResource ModernRadioButtonStyle}"
                                                    Click="rbVhf3VoiceMeeterDeviceType_Click"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Device Name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <ComboBox x:Name="cboVhf3VoiceMeeterStrip" 
                                                    Width="200" 
                                                    SelectionChanged="cboVhf3VoiceMeeterStrip_SelectionChanged"
                                                    DisplayMemberPath="Value"
                                                    SelectedValuePath="Key"/>
                                                <Button x:Name="btnRefreshVhf3Strips" 
                                                    Content="Refresh" 
                                                    Margin="10,0,0,0"
                                                    Click="btnRefreshVoiceMeeterStrips_Click"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Expander>

                                <!-- CAB Channel -->
                                <Expander Header="CAB" IsExpanded="True" Margin="0,5">
                                    <StackPanel Margin="20,10,0,10">
                                        <CheckBox x:Name="chkCabVolumeControl" 
                                            Content="Control CAB App Audio Volume via the CAB Knob on ACP" 
                                            Style="{StaticResource ModernCheckboxStyle}"
                                            Click="chkCabVolumeControl_Click"/>

                                        <CheckBox x:Name="chkCabLatchMute" 
                                            Content="Use Record Latch to mute/unmute App (push/pull Knob)" 
                                            Style="{StaticResource ModernCheckboxStyle}"
                                            Margin="0,5,0,5"
                                            Click="chkCabLatchMute_Click"/>

                                        <!-- Core Audio fields -->
                                        <StackPanel x:Name="pnlCabCoreAudio" Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="Process Name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBox x:Name="txtCabVolumeApp" 
                                                Style="{StaticResource ModernTextBoxStyle}"
                                                Width="120" 
                                                LostFocus="txtCabVolumeApp_LostFocus" 
                                                KeyUp="txtCabVolumeApp_KeyUp"/>
                                            <TextBlock Text="(Comma-separated list of process names without .exe extension)" 
                                                VerticalAlignment="Center" 
                                                Margin="8,0,0,0"
                                                Foreground="#808080"/>
                                        </StackPanel>

                                        <!-- VoiceMeeter fields -->
                                        <StackPanel x:Name="pnlCabVoiceMeeter" Orientation="Vertical" Margin="0,5,0,0" Visibility="Collapsed">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="Device Type:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <RadioButton x:Name="rbCabVoiceMeeterStrip" 
                                                    Content="Strip (Input)" 
                                                    Style="{StaticResource ModernRadioButtonStyle}"
                                                    Click="rbCabVoiceMeeterDeviceType_Click" 
                                                    IsChecked="True"/>
                                                <RadioButton x:Name="rbCabVoiceMeeterBus" 
                                                    Content="Bus (Output)" 
                                                    Style="{StaticResource ModernRadioButtonStyle}"
                                                    Click="rbCabVoiceMeeterDeviceType_Click"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Device Name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <ComboBox x:Name="cboCabVoiceMeeterStrip" 
                                                    Width="200" 
                                                    SelectionChanged="cboCabVoiceMeeterStrip_SelectionChanged"
                                                    DisplayMemberPath="Value"
                                                    SelectedValuePath="Key"/>
                                                <Button x:Name="btnRefreshCabStrips" 
                                                    Content="Refresh" 
                                                    Margin="10,0,0,0"
                                                    Click="btnRefreshVoiceMeeterStrips_Click"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Expander>

                                <!-- PA Channel -->
                                <Expander Header="PA" IsExpanded="True" Margin="0,5">
                                    <StackPanel Margin="20,10,0,10">
                                        <CheckBox x:Name="chkPaVolumeControl" 
                                            Content="Control PA App Audio Volume via the PA Knob on ACP" 
                                            Style="{StaticResource ModernCheckboxStyle}"
                                            Click="chkPaVolumeControl_Click"/>

                                        <CheckBox x:Name="chkPaLatchMute" 
                                            Content="Use Record Latch to mute/unmute App (push/pull Knob)" 
                                            Style="{StaticResource ModernCheckboxStyle}"
                                            Margin="0,5,0,5"
                                            Click="chkPaLatchMute_Click"/>

                                        <!-- Core Audio fields -->
                                        <StackPanel x:Name="pnlPaCoreAudio" Orientation="Horizontal" Margin="0,5,0,0">
                                            <TextBlock Text="Process Name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                            <TextBox x:Name="txtPaVolumeApp" 
                                                Style="{StaticResource ModernTextBoxStyle}"
                                                Width="120" 
                                                LostFocus="txtPaVolumeApp_LostFocus" 
                                                KeyUp="txtPaVolumeApp_KeyUp"/>
                                            <TextBlock Text="(Comma-separated list of process names without .exe extension)" 
                                                VerticalAlignment="Center" 
                                                Margin="8,0,0,0"
                                                Foreground="#808080"/>
                                        </StackPanel>

                                        <!-- VoiceMeeter fields -->
                                        <StackPanel x:Name="pnlPaVoiceMeeter" Orientation="Vertical" Margin="0,5,0,0" Visibility="Collapsed">
                                            <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                                                <TextBlock Text="Device Type:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <RadioButton x:Name="rbPaVoiceMeeterStrip" 
                                                    Content="Strip (Input)" 
                                                    Style="{StaticResource ModernRadioButtonStyle}"
                                                    Click="rbPaVoiceMeeterDeviceType_Click" 
                                                    IsChecked="True"/>
                                                <RadioButton x:Name="rbPaVoiceMeeterBus" 
                                                    Content="Bus (Output)" 
                                                    Style="{StaticResource ModernRadioButtonStyle}"
                                                    Click="rbPaVoiceMeeterDeviceType_Click"/>
                                            </StackPanel>
                                            <StackPanel Orientation="Horizontal">
                                                <TextBlock Text="Device Name:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                                <ComboBox x:Name="cboPaVoiceMeeterStrip" 
                                                    Width="200" 
                                                    SelectionChanged="cboPaVoiceMeeterStrip_SelectionChanged"
                                                    DisplayMemberPath="Value"
                                                    SelectedValuePath="Key"/>
                                                <Button x:Name="btnRefreshPaStrips" 
                                                    Content="Refresh" 
                                                    Margin="10,0,0,0"
                                                    Click="btnRefreshVoiceMeeterStrips_Click"/>
                                            </StackPanel>
                                        </StackPanel>
                                    </StackPanel>
                                </Expander>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
            <!-- Settings Tab -->
            <TabItem Header="SETTINGS" x:Name="SettingsTab">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <!-- Flight Plan Settings -->
                        <TextBlock Text="FLIGHT PLAN SETTINGS" Style="{StaticResource CategoryHeaderStyle}"/>
                        <Border Style="{StaticResource SectionBorderStyle}">
                            <StackPanel>
                                <TextBlock Text="Load Flight Plan From:" Margin="0,0,0,8"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <RadioButton x:Name="eFBPlan" 
                                                Content="EFB" 
                                                Style="{StaticResource ModernRadioButtonStyle}"
                                                Click="flightPlan_Click" 
                                                IsEnabled="False"/>

                                    <RadioButton x:Name="mCDUPlan" 
                                                Content="MCDU" 
                                                Style="{StaticResource ModernRadioButtonStyle}"
                                                Click="flightPlan_Click" 
                                                IsChecked="True"/>
                                </StackPanel>

                                <CheckBox x:Name="chkUseActualPaxValue" 
                                          Content="Use actual Passenger Count from SimBrief OFP" 
                                          Style="{StaticResource ModernCheckboxStyle}"
                                          Click="chkUseActualPaxValue_Click"/>

                                <CheckBox x:Name="chkUseAcars" 
                                          Content="Use ACARS for OPS messages" 
                                          Style="{StaticResource ModernCheckboxStyle}"
                                          Checked="chkUseAcars_Checked" 
                                          Unchecked="chkUseAcars_unChecked"/>

                                <StackPanel Orientation="Horizontal" Margin="24,0,0,0">
                                    <RadioButton x:Name="acarsHoppie" 
                                                Content="Hoppie" 
                                                Style="{StaticResource ModernRadioButtonStyle}"
                                                Click="acars_Click"/>

                                    <RadioButton x:Name="acarsSayIntentions" 
                                                Content="Say Intentions" 
                                                Style="{StaticResource ModernRadioButtonStyle}"
                                                Click="acars_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Simbrief Settings -->
                        <TextBlock Text="SIMBRIEF SETTINGS" Style="{StaticResource CategoryHeaderStyle}"/>
                        <Border Style="{StaticResource SectionBorderStyle}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="Simbrief ID:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                <TextBox x:Name="txtSimbriefID" 
                                             Style="{StaticResource ModernTextBoxStyle}"
                                             Width="80" 
                                             LostFocus="txtSimbriefID_LostFocus" 
                                             KeyUp="txtSimbriefID_KeyUp"/>
                                <Button x:Name="btnTestSimbriefConnection" 
                                        Content="Test Connection" 
                                        Margin="10,0,0,0"
                                        Click="btnTestSimbriefConnection_Click"/>
                            </StackPanel>
                        </Border>

                        <!-- Prosim Settings -->
                        <TextBlock Text="PROSIM SETTINGS" Style="{StaticResource CategoryHeaderStyle}"/>
                        <Border Style="{StaticResource SectionBorderStyle}">
                            <CheckBox x:Name="chkSaveProsimFluidsOnArrival" 
                                      Content="Save hydraulic fluids on arrival" 
                                      Style="{StaticResource ModernCheckboxStyle}"
                                      Click="chkSaveProsimFluidsOnArrival_Click"/>
                        </Border>

                        <!-- Service Calls -->
                        <TextBlock Text="SERVICE CALLS" Style="{StaticResource CategoryHeaderStyle}"/>
                        <Border Style="{StaticResource SectionBorderStyle}">
                            <StackPanel>
                                <CheckBox x:Name="chkAutoReposition" 
                                          Content="Reposition Plane on Startup (via GSX)" 
                                          Style="{StaticResource ModernCheckboxStyle}"
                                          Click="chkAutoReposition_Click"/>

                                <StackPanel Orientation="Horizontal" Margin="24,5,0,10">
                                    <TextBlock Text="Reposition Delay:" VerticalAlignment="Center" Margin="0,0,8,0"/>
                                    <TextBox x:Name="txtRepositionDelay" 
                                             Style="{StaticResource ModernTextBoxStyle}"
                                             Width="80" 
                                             LostFocus="txtRepositionDelay_LostFocus" 
                                             KeyUp="txtRepositionDelay_KeyUp"/>
                                    <TextBlock Text="s" VerticalAlignment="Center" Margin="8,0,0,0"/>
                                </StackPanel>

                                <CheckBox x:Name="chkAutoRefuel" 
                                          Content="Call Refuel Service on Flightplan Import" 
                                          Style="{StaticResource ModernCheckboxStyle}"
                                          Click="chkAutoRefuel_Click"/>

                                <CheckBox x:Name="chkZeroFuel" 
                                          Content="Set Zero Fuel at start of refueling" 
                                          Style="{StaticResource ModernCheckboxStyle}"
                                          Margin="24,5,0,5"
                                          Click="chkZeroFuel_Click"/>

                                <CheckBox x:Name="chkSaveFuel" 
                                          Content="Save current FOB on engine shutdown" 
                                          Style="{StaticResource ModernCheckboxStyle}"
                                          Margin="24,5,0,5"
                                          Checked="chkSaveFuel_Checked" 
                                          Unchecked="chkSaveFuel_unChecked"/>

                                <CheckBox x:Name="chkCallCatering" 
                                          Content="Call Catering Service together with Refuel Service" 
                                          Style="{StaticResource ModernCheckboxStyle}"
                                          Click="chkCallCatering_Click"/>

                                <CheckBox x:Name="chkOpenDoorCatering" 
                                          Content="Auto Open/Close Right Doors when catering in position" 
                                          Style="{StaticResource ModernCheckboxStyle}"
                                          Margin="24,5,0,5"
                                          Click="chkOpenDoorCatering_Click"/>

                                <CheckBox x:Name="chkOpenCargoDoors" 
                                          Content="Auto Open/Close Cargo Doors after catering has finished" 
                                          Style="{StaticResource ModernCheckboxStyle}"
                                          Click="chkOpenCargoDoors_Click"/>

                                <CheckBox x:Name="chkAutoBoard" 
                                          Content="Automatically start Boarding when Refuel and Catering are finished" 
                                          Style="{StaticResource ModernCheckboxStyle}"
                                          Click="chkAutoBoard_Click"/>

                                <CheckBox x:Name="chkAutoDeboard" 
                                          Content="Automatically start Deboarding on Arrival (after Beacon is off)" 
                                          Style="{StaticResource ModernCheckboxStyle}"
                                          Click="chkAutoDeboard_Click"/>

                                <CheckBox x:Name="chkDisableCrewBoarding" 
                                          Content="Disable Crew De-/Boarding (supress Question/Pop-Up)" 
                                          Style="{StaticResource ModernCheckboxStyle}"
                                          Click="chkDisableCrewBoarding_Click"/>

                                <TextBlock Text="Refuel Rate" Margin="0,10,0,5"/>
                                <StackPanel Orientation="Horizontal">
                                    <TextBox x:Name="txtRefuelRate" 
                                             Style="{StaticResource ModernTextBoxStyle}"
                                             Width="100" 
                                             Margin="0,0,10,0"
                                             LostFocus="txtRefuelRate_LostFocus" 
                                             KeyUp="txtRefuelRate_KeyUp"/>

                                    <RadioButton x:Name="unitKGS" 
                                               Content="kg/s" 
                                               Style="{StaticResource ModernRadioButtonStyle}"
                                               Click="units_Click"/>

                                    <RadioButton x:Name="unitLBS" 
                                               Content="lbs/s" 
                                               Style="{StaticResource ModernRadioButtonStyle}"
                                               Click="units_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>

                        <!-- Ground Handling -->
                        <TextBlock Text="GROUND HANDLING" Style="{StaticResource CategoryHeaderStyle}"/>
                        <Border Style="{StaticResource SectionBorderStyle}">
                            <StackPanel>
                                <CheckBox x:Name="chkAutoConnect" 
                                          Content="Automatic Jetway and Stairs Operation (on Startup, Departure and Arrival)" 
                                          Style="{StaticResource ModernCheckboxStyle}"
                                          Click="chkAutoConnect_Click"/>

                                <CheckBox x:Name="chkJetwayOnly" 
                                          Content="Jetway Only (no Stairs)" 
                                          Style="{StaticResource ModernCheckboxStyle}"
                                          Margin="24,5,0,5"
                                          Click="chkJetwayOnly_Click"/>

                                <CheckBox x:Name="chkConnectPCA" 
                                          Content="Connect/Disconnect PCA (on Startup, Departure and Arrival)" 
                                          Style="{StaticResource ModernCheckboxStyle}"
                                          Click="chkConnectPCA_Click"/>

                                <CheckBox x:Name="chkPcaOnlyJetway" 
                                          Content="PCA only available on Jetways" 
                                          Style="{StaticResource ModernCheckboxStyle}"
                                          Margin="24,5,0,5"
                                          Click="chkPcaOnlyJetway_Click"/>

                                <CheckBox x:Name="chkSynchBypass" 
                                          Content="Synchronize By-Pass Pin State during Push-Back" 
                                          Style="{StaticResource ModernCheckboxStyle}"
                                          Click="chkSynchBypass_Click"/>
                            </StackPanel>
                        </Border>

                        <!-- Appearance Settings -->
                        <TextBlock Text="APPEARANCE" Style="{StaticResource CategoryHeaderStyle}"/>
                        <Border Style="{StaticResource SectionBorderStyle}">
                            <StackPanel>
                                <TextBlock Text="Theme:" Margin="0,0,0,8"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                                    <ComboBox x:Name="cboTheme" 
                                              Width="200" 
                                              HorizontalAlignment="Left"
                                              SelectionChanged="cboTheme_SelectionChanged"/>
                                    <Button x:Name="btnRefreshThemes" 
                                            Content="Refresh" 
                                            Margin="10,0,0,0"
                                            Click="btnRefreshThemes_Click"/>
                                </StackPanel>
                                
                                <TextBlock Text="Theme files are stored in:" Margin="0,10,0,5"/>
                                <TextBlock x:Name="txtThemesPath" 
                                           Text="[Themes Directory Path]" 
                                           Foreground="#808080"/>
                                
                                <TextBlock Text="Create new themes by adding .json files to this directory." 
                                           TextWrapping="Wrap" 
                                           Margin="0,5,0,0" 
                                           Foreground="#808080"/>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
