<Window x:Class="Prosim2GSX.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Prosim2GSX"
        xmlns:serviceModel="clr-namespace:System.ServiceModel;assembly=System.ServiceModel"
        xmlns:viewModels="clr-namespace:Prosim2GSX.ViewModels"
        xmlns:components="clr-namespace:Prosim2GSX.Views.Components"
        mc:Ignorable="d"
        Title="Prosim2GSX EFB" Height="810" Width="800" 
        ResizeMode="NoResize" 
        IsVisibleChanged="Window_IsVisibleChanged" 
        Closing="Window_Closing"
        Background="{DynamicResource ContentBackground}">

    <Window.Resources>
        <!-- Modern styles for controls -->
        <Style x:Key="TabButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="Foreground" Value="#606060"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Foreground" Value="#1E90FF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ActiveTabButtonStyle" TargetType="Button" BasedOn="{StaticResource TabButtonStyle}">
            <Setter Property="Foreground" Value="#1E90FF"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="BorderThickness" Value="0,0,0,2"/>
            <Setter Property="BorderBrush" Value="#1E90FF"/>
        </Style>

        <Style x:Key="StatusLabelStyle" TargetType="Label">
            <Setter Property="Background" Value="#E0E0E0"/>
            <Setter Property="Foreground" Value="#404040"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0,0,10,0"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="MinWidth" Value="120"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Label">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                             VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="CategoryHeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="DemiBold"/>
            <Setter Property="Foreground" Value="{DynamicResource CategoryText}"/>
            <Setter Property="Margin" Value="0,10,0,5"/>
        </Style>

        <Style x:Key="ModernCheckboxStyle" TargetType="CheckBox">
            <Setter Property="Margin" Value="0,8,0,8"/>
            <Setter Property="Foreground" Value="{DynamicResource ContentText}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="ModernRadioButtonStyle" TargetType="RadioButton">
            <Setter Property="Margin" Value="0,8,15,8"/>
            <Setter Property="Foreground" Value="{DynamicResource ContentText}"/>
            <Setter Property="FontSize" Value="14"/>
        </Style>

        <Style x:Key="SectionBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource SectionBackground}"/>
            <Setter Property="BorderBrush" Value="#E0E0E0"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Padding" Value="12"/>
            <Setter Property="Margin" Value="0,8,0,10"/>
        </Style>

        <Style x:Key="ModernTextBoxStyle" TargetType="TextBox">
            <Setter Property="Height" Value="30"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Padding" Value="8,0"/>
            <Setter Property="Background" Value="#F8F8F8"/>
            <Setter Property="BorderBrush" Value="#CCCCCC"/>
            <Setter Property="BorderThickness" Value="1"/>
        </Style>

        <Style x:Key="StatusIndicatorStyle" TargetType="Ellipse">
            <Setter Property="Width" Value="14"/>
            <Setter Property="Height" Value="14"/>
            <Setter Property="Margin" Value="0,0,8,0"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <Grid>
        <!-- Header Section -->
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Top Bar with App Name and Navigation -->
        <Border Background="{DynamicResource HeaderBackground}" Grid.Row="0" Margin="0,0,0,-2">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Left side - App Title -->
                <TextBlock Grid.Column="0"
                   Text="PROSIM2GSX" 
                   FontWeight="Bold" 
                   FontSize="18" 
                   Foreground="{DynamicResource HeaderText}" 
                   VerticalAlignment="Center"
                   Margin="20,0,0,0"/>

                <!-- Center - Flight Number -->
                <TextBlock Grid.Column="1"
                    x:Name="FlightNumberDisplay" 
                    Text="{Binding FlightNumber}" 
                    FontWeight="SemiBold" 
                    FontSize="16" 
                    Foreground="{DynamicResource HeaderText}" 
                    VerticalAlignment="Center"
                    HorizontalAlignment="Center"
                    Padding="10,5"
                    Background="{DynamicResource PrimaryColor}"
                    MinWidth="120"
                    TextAlignment="Center"/>


                <!-- Right side - Date and Navigation -->
                <StackPanel Grid.Column="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    VerticalAlignment="Center">

                    <!-- Navigation icons -->
                    <Button Style="{StaticResource TabButtonStyle}" 
                    Foreground="{DynamicResource HeaderText}"
                    Content="ðŸ”Š" 
                    FontSize="16" 
                    x:Name="btnAudioSettings"
                    Click="btnAudioSettings_Click"
                    ToolTip="Audio Settings"/>
                    <Button Style="{StaticResource TabButtonStyle}" 
                    Foreground="{DynamicResource HeaderText}"
                    Content="âš™" 
                    FontSize="16" 
                    x:Name="btnSettings"
                    Click="btnSettings_Click"
                    ToolTip="Settings"/>
                    <Button Style="{StaticResource TabButtonStyle}" 
                    Foreground="{DynamicResource HeaderText}"
                    Content="?" 
                    FontSize="16" 
                    x:Name="btnHelp"
                    Click="btnHelp_Click"
                    ToolTip="Help"/>

                    <!-- Date display -->
                    <TextBlock x:Name="CurrentDateTime" 
                       Text="{Binding CurrentDate}" 
                       FontSize="14" 
                       Foreground="{DynamicResource HeaderText}" 
                       VerticalAlignment="Center"
                       Padding="10,5"
                       Background="{DynamicResource SecondaryColor}"
                       Margin="0,0,15,0"/>

                </StackPanel>
            </Grid>
        </Border>
        <!-- Main Content Area with TabControl -->
        <TabControl Grid.Row="1" 
            BorderThickness="0"
            Background="Transparent"
            x:Name="MainTabControl" 
            SelectedIndex="{Binding SelectedTabIndex, Mode=TwoWay}"
            Margin="0,0,0,-21">


            <!-- Flight Status Tab -->
            <TabItem Header="FLIGHT STATUS" x:Name="StatusTab">
                <StackPanel Margin="20,0,20,0" Height="707">
                        <!-- Connection Status -->
                    <TextBlock Text="CONNECTION STATUS" Style="{StaticResource CategoryHeaderStyle}"/>
                    <components:ConnectionStatusControl DataContext="{Binding ConnectionStatus}"/>

                    <!-- Flight Phase -->
                    <TextBlock Text="FLIGHT PHASE" Style="{StaticResource CategoryHeaderStyle}"/>
                    <components:FlightPhaseControl DataContext="{Binding FlightPhase}"/>

                    <!-- Ground Services Status -->
                    <TextBlock Text="GROUND SERVICES" Style="{StaticResource CategoryHeaderStyle}"/>
                    <components:GroundServicesControl DataContext="{Binding GroundServices}"/>

                    <!-- Log Messages -->
                    <TextBlock Text="LOG MESSAGES" Style="{StaticResource CategoryHeaderStyle}"/>
                    <components:LogMessagesControl DataContext="{Binding LogMessages}"/>
                </StackPanel>
            </TabItem>

            <!-- Audio Settings Tab -->
            <TabItem Header="AUDIO SETTINGS" x:Name="AudioSettingsTab">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="20">
                        <TextBlock Text="AUDIO API" Style="{StaticResource CategoryHeaderStyle}"/>
                        <Border Style="{StaticResource SectionBorderStyle}">
                            <StackPanel>
                                <TextBlock Text="Select Audio API:" Margin="0,0,0,8"/>
                                <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                                    <RadioButton x:Name="rbCoreAudio" 
                                        Content="Core Audio (Process Control)" 
                                        Style="{StaticResource ModernRadioButtonStyle}"
                                        Click="audioApi_Click" 
                                        IsChecked="True"/>

                                    <RadioButton x:Name="rbVoiceMeeter" 
                                        Content="VoiceMeeter API (Strip Control)" 
                                        Style="{StaticResource ModernRadioButtonStyle}"
                                        Click="audioApi_Click"/>
                                </StackPanel>
                                
                                <!-- VoiceMeeter Diagnostics Button -->
                                <StackPanel x:Name="pnlVoiceMeeterDiagnostics" Orientation="Horizontal" Margin="0,10,0,0">
