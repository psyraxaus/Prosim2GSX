                                        Content="Run VoiceMeeter Diagnostics" 
                                        Click="btnRunVoiceMeeterDiagnostics_Click"
                                        Padding="10,5"
                                        Background="{DynamicResource PrimaryColor}"
                                        Foreground="{DynamicResource HeaderText}"
                                        BorderThickness="0"/>
                                    <TextBlock Text="(Results will be shown in log)" 
                                        VerticalAlignment="Center" 
                                        Margin="10,0,0,0"
                                        Foreground="#808080"/>
                                </StackPanel>
                            </StackPanel>
                        </Border>
