<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <ResourceDictionary.MergedDictionaries>
        <!-- Include other style dictionaries -->
        <ResourceDictionary Source="Buttons.xaml" />
        <ResourceDictionary Source="TextStyles.xaml" />
        <ResourceDictionary Source="Panels.xaml" />
        <ResourceDictionary Source="Animations.xaml" />
    </ResourceDictionary.MergedDictionaries>
    
    <!-- Base Colors -->
    <!-- These colors will be overridden by theme-specific colors -->
    <Color x:Key="EFBPrimaryColor">#007ACC</Color>
    <Color x:Key="EFBSecondaryColor">#3C3C3C</Color>
    <Color x:Key="EFBAccentColor">#FF9900</Color>
    <Color x:Key="EFBBackgroundColor">#1E1E1E</Color>
    <Color x:Key="EFBForegroundColor">#FFFFFF</Color>
    <Color x:Key="EFBBorderColor">#454545</Color>
    <Color x:Key="EFBSuccessColor">#4CAF50</Color>
    <Color x:Key="EFBWarningColor">#FFC107</Color>
    <Color x:Key="EFBErrorColor">#F44336</Color>
    <Color x:Key="EFBInfoColor">#2196F3</Color>
    
    <!-- Brushes -->
    <SolidColorBrush x:Key="EFBPrimaryBrush" Color="{DynamicResource EFBPrimaryColor}" />
    <SolidColorBrush x:Key="EFBSecondaryBrush" Color="{DynamicResource EFBSecondaryColor}" />
    <SolidColorBrush x:Key="EFBAccentBrush" Color="{DynamicResource EFBAccentColor}" />
    <SolidColorBrush x:Key="EFBBackgroundBrush" Color="{DynamicResource EFBBackgroundColor}" />
    <SolidColorBrush x:Key="EFBForegroundBrush" Color="{DynamicResource EFBForegroundColor}" />
    <SolidColorBrush x:Key="EFBBorderBrush" Color="{DynamicResource EFBBorderColor}" />
    <SolidColorBrush x:Key="EFBSuccessBrush" Color="{DynamicResource EFBSuccessColor}" />
    <SolidColorBrush x:Key="EFBWarningBrush" Color="{DynamicResource EFBWarningColor}" />
    <SolidColorBrush x:Key="EFBErrorBrush" Color="{DynamicResource EFBErrorColor}" />
    <SolidColorBrush x:Key="EFBInfoBrush" Color="{DynamicResource EFBInfoColor}" />
    
    <!-- Gradients -->
    <LinearGradientBrush x:Key="EFBHeaderGradient" StartPoint="0,0" EndPoint="0,1">
        <GradientStop Color="{DynamicResource EFBPrimaryColor}" Offset="0" />
        <GradientStop Color="{DynamicResource EFBSecondaryColor}" Offset="1" />
    </LinearGradientBrush>
    
    <!-- Thickness -->
    <Thickness x:Key="EFBDefaultMargin">10</Thickness>
    <Thickness x:Key="EFBDefaultPadding">10</Thickness>
    <Thickness x:Key="EFBHeaderPadding">15,10</Thickness>
    <Thickness x:Key="EFBContentMargin">0,10,0,0</Thickness>
    <Thickness x:Key="EFBDefaultBorderThickness">1</Thickness>
    
    <!-- Font Sizes -->
    <system:Double x:Key="EFBHeaderFontSize" xmlns:system="clr-namespace:System;assembly=mscorlib">20</system:Double>
    <system:Double x:Key="EFBSubHeaderFontSize" xmlns:system="clr-namespace:System;assembly=mscorlib">16</system:Double>
    <system:Double x:Key="EFBNormalFontSize" xmlns:system="clr-namespace:System;assembly=mscorlib">14</system:Double>
    <system:Double x:Key="EFBSmallFontSize" xmlns:system="clr-namespace:System;assembly=mscorlib">12</system:Double>
    
    <!-- Font Weights -->
    <FontWeight x:Key="EFBHeaderFontWeight">SemiBold</FontWeight>
    <FontWeight x:Key="EFBNormalFontWeight">Normal</FontWeight>
    <FontWeight x:Key="EFBBoldFontWeight">Bold</FontWeight>
    
    <!-- Corner Radius -->
    <CornerRadius x:Key="EFBDefaultCornerRadius">4</CornerRadius>
    <CornerRadius x:Key="EFBButtonCornerRadius">4</CornerRadius>
    <CornerRadius x:Key="EFBPanelCornerRadius">6</CornerRadius>
    
    <!-- Base Styles -->
    
    <!-- Window Style -->
    <Style x:Key="EFBWindowStyle" TargetType="Window">
        <Setter Property="Background" Value="{DynamicResource EFBBackgroundBrush}" />
        <Setter Property="Foreground" Value="{DynamicResource EFBForegroundBrush}" />
        <Setter Property="FontSize" Value="{DynamicResource EFBNormalFontSize}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="WindowStyle" Value="None" />
        <Setter Property="AllowsTransparency" Value="True" />
        <Setter Property="ResizeMode" Value="CanResizeWithGrip" />
    </Style>
    
    <!-- Base Control Style -->
    <Style x:Key="EFBBaseControlStyle">
        <Setter Property="Control.Foreground" Value="{DynamicResource EFBForegroundBrush}" />
        <Setter Property="Control.Background" Value="Transparent" />
        <Setter Property="Control.FontSize" Value="{DynamicResource EFBNormalFontSize}" />
        <Setter Property="Control.FontFamily" Value="Segoe UI" />
        <Setter Property="Control.Padding" Value="{DynamicResource EFBDefaultPadding}" />
        <Setter Property="Control.Margin" Value="{DynamicResource EFBDefaultMargin}" />
    </Style>
    
    <!-- Base Text Block Style -->
    <Style x:Key="EFBTextBlockStyle" TargetType="TextBlock">
        <Setter Property="Foreground" Value="{DynamicResource EFBForegroundBrush}" />
        <Setter Property="FontSize" Value="{DynamicResource EFBNormalFontSize}" />
        <Setter Property="FontFamily" Value="Segoe UI" />
        <Setter Property="TextWrapping" Value="Wrap" />
        <Setter Property="Margin" Value="0,0,0,5" />
    </Style>
    
    <!-- Base Border Style -->
    <Style x:Key="EFBBorderStyle" TargetType="Border">
        <Setter Property="BorderBrush" Value="{DynamicResource EFBBorderBrush}" />
        <Setter Property="BorderThickness" Value="{DynamicResource EFBDefaultBorderThickness}" />
        <Setter Property="CornerRadius" Value="{DynamicResource EFBDefaultCornerRadius}" />
        <Setter Property="Padding" Value="{DynamicResource EFBDefaultPadding}" />
    </Style>
    
    <!-- Base Grid Style -->
    <Style x:Key="EFBGridStyle" TargetType="Grid">
        <Setter Property="Margin" Value="0" />
    </Style>
    
    <!-- Base StackPanel Style -->
    <Style x:Key="EFBStackPanelStyle" TargetType="StackPanel">
        <Setter Property="Margin" Value="0" />
    </Style>
    
    <!-- Base ScrollViewer Style -->
    <Style x:Key="EFBScrollViewerStyle" TargetType="ScrollViewer">
        <Setter Property="VerticalScrollBarVisibility" Value="Auto" />
        <Setter Property="HorizontalScrollBarVisibility" Value="Disabled" />
        <Setter Property="Padding" Value="0" />
        <Setter Property="Background" Value="Transparent" />
    </Style>
</ResourceDictionary>
