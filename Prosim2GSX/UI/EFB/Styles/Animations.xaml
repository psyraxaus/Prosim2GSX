<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    
    <!-- Fade In Animation -->
    <Storyboard x:Key="FadeInAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0.0" To="1.0"
                         Duration="0:0:0.3"
                         FillBehavior="HoldEnd" />
    </Storyboard>
    
    <!-- Fade Out Animation -->
    <Storyboard x:Key="FadeOutAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="1.0" To="0.0"
                         Duration="0:0:0.3"
                         FillBehavior="HoldEnd" />
    </Storyboard>
    
    <!-- Slide In From Right Animation -->
    <Storyboard x:Key="SlideInFromRightAnimation">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)">
            <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="300" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0.0" To="1.0"
                         Duration="0:0:0.3"
                         FillBehavior="HoldEnd" />
    </Storyboard>
    
    <!-- Slide Out To Left Animation -->
    <Storyboard x:Key="SlideOutToLeftAnimation">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)">
            <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="0" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="-300">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicEase EasingMode="EaseIn" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="1.0" To="0.0"
                         Duration="0:0:0.3"
                         FillBehavior="HoldEnd" />
    </Storyboard>
    
    <!-- Slide In From Left Animation -->
    <Storyboard x:Key="SlideInFromLeftAnimation">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)">
            <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="-300" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0.0" To="1.0"
                         Duration="0:0:0.3"
                         FillBehavior="HoldEnd" />
    </Storyboard>
    
    <!-- Slide Out To Right Animation -->
    <Storyboard x:Key="SlideOutToRightAnimation">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)">
            <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="0" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="300">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicEase EasingMode="EaseIn" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="1.0" To="0.0"
                         Duration="0:0:0.3"
                         FillBehavior="HoldEnd" />
    </Storyboard>
    
    <!-- Slide In From Top Animation -->
    <Storyboard x:Key="SlideInFromTopAnimation">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)">
            <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="-300" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0.0" To="1.0"
                         Duration="0:0:0.3"
                         FillBehavior="HoldEnd" />
    </Storyboard>
    
    <!-- Slide Out To Bottom Animation -->
    <Storyboard x:Key="SlideOutToBottomAnimation">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)">
            <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="0" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="300">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicEase EasingMode="EaseIn" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="1.0" To="0.0"
                         Duration="0:0:0.3"
                         FillBehavior="HoldEnd" />
    </Storyboard>
    
    <!-- Scale In Animation -->
    <Storyboard x:Key="ScaleInAnimation">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)">
            <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="0.8" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1.0">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)">
            <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="0.8" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="1.0">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0.0" To="1.0"
                         Duration="0:0:0.3"
                         FillBehavior="HoldEnd" />
    </Storyboard>
    
    <!-- Scale Out Animation -->
    <Storyboard x:Key="ScaleOutAnimation">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)">
            <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="1.0" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0.8">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicEase EasingMode="EaseIn" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)">
            <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="1.0" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0.8">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicEase EasingMode="EaseIn" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="1.0" To="0.0"
                         Duration="0:0:0.3"
                         FillBehavior="HoldEnd" />
    </Storyboard>
    
    <!-- Pulse Animation -->
    <Storyboard x:Key="PulseAnimation" RepeatBehavior="Forever">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)">
            <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="1.0" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="1.1">
                <EasingDoubleKeyFrame.EasingFunction>
                    <SineEase EasingMode="EaseInOut" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
            <EasingDoubleKeyFrame KeyTime="0:0:1.0" Value="1.0">
                <EasingDoubleKeyFrame.EasingFunction>
                    <SineEase EasingMode="EaseInOut" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)">
            <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="1.0" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.5" Value="1.1">
                <EasingDoubleKeyFrame.EasingFunction>
                    <SineEase EasingMode="EaseInOut" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
            <EasingDoubleKeyFrame KeyTime="0:0:1.0" Value="1.0">
                <EasingDoubleKeyFrame.EasingFunction>
                    <SineEase EasingMode="EaseInOut" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>
    
    <!-- Blink Animation -->
    <Storyboard x:Key="BlinkAnimation" RepeatBehavior="Forever">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="Opacity">
            <DiscreteDoubleKeyFrame KeyTime="0:0:0.0" Value="1.0" />
            <DiscreteDoubleKeyFrame KeyTime="0:0:0.5" Value="0.3" />
            <DiscreteDoubleKeyFrame KeyTime="0:0:1.0" Value="1.0" />
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>
    
    <!-- Rotate Animation -->
    <Storyboard x:Key="RotateAnimation" RepeatBehavior="Forever">
        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)"
                         From="0" To="360"
                         Duration="0:0:2"
                         FillBehavior="HoldEnd" />
    </Storyboard>
    
    <!-- Progress Animation -->
    <Storyboard x:Key="ProgressAnimation">
        <DoubleAnimation Storyboard.TargetProperty="Width"
                         From="0" To="{Binding ActualWidth, RelativeSource={RelativeSource FindAncestor, AncestorType={x:Type Grid}}}"
                         Duration="0:0:1"
                         FillBehavior="HoldEnd" />
    </Storyboard>
    
    <!-- Button Click Animation -->
    <Storyboard x:Key="ButtonClickAnimation">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)">
            <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="1.0" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0.95">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1.0">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)">
            <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="1.0" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.1" Value="0.95">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
            <EasingDoubleKeyFrame KeyTime="0:0:0.2" Value="1.0">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>
    
    <!-- Highlight Animation -->
    <Storyboard x:Key="HighlightAnimation">
        <ColorAnimationUsingKeyFrames Storyboard.TargetProperty="(Border.Background).(SolidColorBrush.Color)">
            <EasingColorKeyFrame KeyTime="0:0:0.0" Value="{StaticResource EFBSecondaryColor}" />
            <EasingColorKeyFrame KeyTime="0:0:0.2" Value="{StaticResource EFBPrimaryColor}">
                <EasingColorKeyFrame.EasingFunction>
                    <CubicEase EasingMode="EaseOut" />
                </EasingColorKeyFrame.EasingFunction>
            </EasingColorKeyFrame>
            <EasingColorKeyFrame KeyTime="0:0:1.0" Value="{StaticResource EFBSecondaryColor}">
                <EasingColorKeyFrame.EasingFunction>
                    <CubicEase EasingMode="EaseIn" />
                </EasingColorKeyFrame.EasingFunction>
            </EasingColorKeyFrame>
        </ColorAnimationUsingKeyFrames>
    </Storyboard>
    
    <!-- Notification Animation -->
    <Storyboard x:Key="NotificationAnimation">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.Y)">
            <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="-50" />
            <EasingDoubleKeyFrame KeyTime="0:0:0.3" Value="0">
                <EasingDoubleKeyFrame.EasingFunction>
                    <BackEase EasingMode="EaseOut" Amplitude="0.3" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
            <EasingDoubleKeyFrame KeyTime="0:0:2.7" Value="0" />
            <EasingDoubleKeyFrame KeyTime="0:0:3.0" Value="-50">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicEase EasingMode="EaseIn" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="0.0" To="1.0"
                         Duration="0:0:0.3"
                         FillBehavior="HoldEnd" />
        <DoubleAnimation Storyboard.TargetProperty="Opacity"
                         From="1.0" To="0.0"
                         BeginTime="0:0:2.7"
                         Duration="0:0:0.3"
                         FillBehavior="HoldEnd" />
    </Storyboard>
    
    <!-- Loading Animation -->
    <Storyboard x:Key="LoadingAnimation" RepeatBehavior="Forever">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(RotateTransform.Angle)">
            <LinearDoubleKeyFrame KeyTime="0:0:0.0" Value="0" />
            <LinearDoubleKeyFrame KeyTime="0:0:1.0" Value="360" />
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>
    
    <!-- Progress Bar Animation -->
    <Storyboard x:Key="ProgressBarAnimation" RepeatBehavior="Forever">
        <DoubleAnimationUsingKeyFrames Storyboard.TargetProperty="(UIElement.RenderTransform).(TranslateTransform.X)">
            <EasingDoubleKeyFrame KeyTime="0:0:0.0" Value="-100" />
            <EasingDoubleKeyFrame KeyTime="0:0:1.0" Value="400">
                <EasingDoubleKeyFrame.EasingFunction>
                    <CubicEase EasingMode="EaseInOut" />
                </EasingDoubleKeyFrame.EasingFunction>
            </EasingDoubleKeyFrame>
        </DoubleAnimationUsingKeyFrames>
    </Storyboard>
</ResourceDictionary>
