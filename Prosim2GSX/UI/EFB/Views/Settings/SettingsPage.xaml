<Page x:Class="Prosim2GSX.UI.EFB.Views.Settings.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Prosim2GSX.UI.EFB.Views.Settings"
      xmlns:viewmodels="clr-namespace:Prosim2GSX.UI.EFB.ViewModels"
      xmlns:settings="clr-namespace:Prosim2GSX.UI.EFB.ViewModels.Settings"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Settings">

    <Page.Resources>
        <!-- Card Border Style -->
        <Style x:Key="CardBorderStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource EFBCardBackgroundBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource EFBCardBorderBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="CornerRadius" Value="8" />
            <Setter Property="Margin" Value="8" />
            <Setter Property="Padding" Value="16" />
            <Setter Property="Effect">
                <Setter.Value>
                    <DropShadowEffect ShadowDepth="2" BlurRadius="5" Opacity="0.3" />
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Card Header Style -->
        <Style x:Key="CardHeaderStyle" TargetType="TextBlock" BasedOn="{StaticResource EFBSubHeaderTextStyle}">
            <Setter Property="Margin" Value="0,0,0,12" />
            <Setter Property="FontWeight" Value="SemiBold" />
        </Style>

        <!-- Setting Container Style -->
        <Style x:Key="SettingContainerStyle" TargetType="Border">
            <Setter Property="BorderBrush" Value="{DynamicResource EFBCardBorderBrush}" />
            <Setter Property="BorderThickness" Value="0,0,0,1" />
            <Setter Property="Padding" Value="0,8,0,8" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>

        <!-- Setting Name Style -->
        <Style x:Key="SettingNameStyle" TargetType="TextBlock" BasedOn="{StaticResource EFBBodyTextStyle}">
            <Setter Property="FontWeight" Value="SemiBold" />
            <Setter Property="Margin" Value="0,0,0,4" />
        </Style>

        <!-- Setting Description Style -->
        <Style x:Key="SettingDescriptionStyle" TargetType="TextBlock" BasedOn="{StaticResource EFBCaptionTextStyle}">
            <Setter Property="TextWrapping" Value="Wrap" />
            <Setter Property="Margin" Value="0,0,0,8" />
        </Style>

        <!-- Toggle Switch Style -->
        <Style x:Key="ToggleSwitchStyle" TargetType="ToggleButton">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Grid>
                            <Border x:Name="BackgroundElement" 
                                    Background="{DynamicResource EFBToggleBackgroundBrush}" 
                                    BorderBrush="{DynamicResource EFBToggleBorderBrush}" 
                                    BorderThickness="1" 
                                    CornerRadius="10" 
                                    Width="40" 
                                    Height="20">
                            </Border>
                            <Border x:Name="ThumbElement" 
                                    Background="{DynamicResource EFBToggleThumbBrush}" 
                                    BorderBrush="{DynamicResource EFBToggleThumbBorderBrush}" 
                                    BorderThickness="1" 
                                    CornerRadius="8" 
                                    Width="16" 
                                    Height="16" 
                                    HorizontalAlignment="Left" 
                                    Margin="2,0,0,0">
                            </Border>
                        </Grid>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="BackgroundElement" Property="Background" Value="{DynamicResource EFBToggleCheckedBackgroundBrush}" />
                                <Setter TargetName="ThumbElement" Property="Background" Value="{DynamicResource EFBToggleCheckedThumbBrush}" />
                                <Setter TargetName="ThumbElement" Property="Margin" Value="22,0,0,0" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="BackgroundElement" Property="Opacity" Value="0.5" />
                                <Setter TargetName="ThumbElement" Property="Opacity" Value="0.5" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>

        <!-- Numeric Up Down Style -->
        <Style x:Key="NumericUpDownStyle" TargetType="Grid">
            <Setter Property="Width" Value="120" />
            <Setter Property="HorizontalAlignment" Value="Right" />
        </Style>

        <!-- Combo Box Style -->
        <Style x:Key="ComboBoxStyle" TargetType="ComboBox">
            <Setter Property="Width" Value="150" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <!-- Text Box Style -->
        <Style x:Key="TextBoxStyle" TargetType="TextBox" BasedOn="{StaticResource EFBTextBoxStyle}">
            <Setter Property="Width" Value="150" />
            <Setter Property="HorizontalAlignment" Value="Right" />
            <Setter Property="VerticalAlignment" Value="Center" />
        </Style>

        <!-- Button Style -->
        <Style x:Key="ActionButtonStyle" TargetType="Button">
            <Setter Property="Padding" Value="16,8" />
            <Setter Property="Margin" Value="8,0,0,0" />
            <Setter Property="MinWidth" Value="100" />
            <Setter Property="Background" Value="{DynamicResource EFBPrimaryBrush}" />
            <Setter Property="Foreground" Value="{DynamicResource EFBTextContrastBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource EFBPrimaryBrush}" />
            <Setter Property="BorderThickness" Value="1" />
            <Setter Property="VerticalAlignment" Value="Center" />
            <Setter Property="HorizontalAlignment" Value="Center" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="4">
                            <ContentPresenter x:Name="contentPresenter" 
                                              Focusable="False" 
                                              HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" 
                                              Margin="{TemplateBinding Padding}" 
                                              RecognizesAccessKey="True" 
                                              SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" 
                                              VerticalAlignment="{TemplateBinding VerticalContentAlignment}" />
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" TargetName="border" Value="{DynamicResource EFBPrimaryHoverBrush}" />
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource EFBPrimaryHoverBrush}" />
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" TargetName="border" Value="{DynamicResource EFBPrimaryPressedBrush}" />
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource EFBPrimaryPressedBrush}" />
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" TargetName="border" Value="{DynamicResource EFBDisabledBackgroundBrush}" />
                                <Setter Property="BorderBrush" TargetName="border" Value="{DynamicResource EFBDisabledBorderBrush}" />
                                <Setter Property="TextElement.Foreground" TargetName="contentPresenter" Value="{DynamicResource EFBDisabledForegroundBrush}" />
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Secondary Button Style -->
        <Style x:Key="SecondaryButtonStyle" TargetType="Button" BasedOn="{StaticResource ActionButtonStyle}">
            <Setter Property="Background" Value="{DynamicResource EFBSecondaryBrush}" />
            <Setter Property="BorderBrush" Value="{DynamicResource EFBSecondaryBrush}" />
        </Style>

        <!-- Data Templates -->
        <DataTemplate x:Key="ToggleSettingTemplate">
            <Border Style="{StaticResource SettingContainerStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="{Binding Name}" 
                               Style="{StaticResource SettingNameStyle}" 
                               Grid.Row="0" 
                               Grid.Column="0" />
                    
                    <ToggleButton IsChecked="{Binding IsToggled}" 
                                  Style="{StaticResource ToggleSwitchStyle}" 
                                  Grid.Row="0" 
                                  Grid.Column="1" 
                                  IsEnabled="{Binding IsEnabled}" />
                    
                    <TextBlock Text="{Binding Description}" 
                               Style="{StaticResource SettingDescriptionStyle}" 
                               Grid.Row="1" 
                               Grid.Column="0" 
                               Grid.ColumnSpan="2" />
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="OptionsSettingTemplate">
            <Border Style="{StaticResource SettingContainerStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="{Binding Name}" 
                               Style="{StaticResource SettingNameStyle}" 
                               Grid.Row="0" 
                               Grid.Column="0" />
                    
                    <ComboBox ItemsSource="{Binding Options}" 
                              SelectedItem="{Binding SelectedOption}" 
                              Style="{StaticResource ComboBoxStyle}" 
                              Grid.Row="0" 
                              Grid.Column="1" 
                              IsEnabled="{Binding IsEnabled}" />
                    
                    <TextBlock Text="{Binding Description}" 
                               Style="{StaticResource SettingDescriptionStyle}" 
                               Grid.Row="1" 
                               Grid.Column="0" 
                               Grid.ColumnSpan="2" />
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="TextSettingTemplate">
            <Border Style="{StaticResource SettingContainerStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="{Binding Name}" 
                               Style="{StaticResource SettingNameStyle}" 
                               Grid.Row="0" 
                               Grid.Column="0" />
                    
                    <TextBox Text="{Binding TextValue}" 
                             Style="{StaticResource TextBoxStyle}" 
                             Grid.Row="0" 
                             Grid.Column="1" 
                             IsEnabled="{Binding IsEnabled}" />
                    
                    <TextBlock Text="{Binding Description}" 
                               Style="{StaticResource SettingDescriptionStyle}" 
                               Grid.Row="1" 
                               Grid.Column="0" 
                               Grid.ColumnSpan="2" />
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="NumericSettingTemplate">
            <Border Style="{StaticResource SettingContainerStyle}">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Text="{Binding Name}" 
                               Style="{StaticResource SettingNameStyle}" 
                               Grid.Row="0" 
                               Grid.Column="0" />
                    
                    <Grid Style="{StaticResource NumericUpDownStyle}" 
                          Grid.Row="0" 
                          Grid.Column="1">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        
                        <TextBox Text="{Binding NumericValue}" 
                                 Style="{StaticResource EFBNumericTextBoxStyle}" 
                                 Grid.Column="0" 
                                 IsEnabled="{Binding IsEnabled}" />
                        
                        <StackPanel Grid.Column="1" Orientation="Vertical">
                            <Button Content="▲" Width="20" Height="15" Padding="0" Margin="2,0,0,1" 
                                    Command="{Binding DataContext.IncrementCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                    CommandParameter="{Binding}" 
                                    IsEnabled="{Binding IsEnabled}" />
                            <Button Content="▼" Width="20" Height="15" Padding="0" Margin="2,1,0,0" 
                                    Command="{Binding DataContext.DecrementCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" 
                                    CommandParameter="{Binding}" 
                                    IsEnabled="{Binding IsEnabled}" />
                        </StackPanel>
                    </Grid>
                    
                    <TextBlock Text="{Binding Description}" 
                               Style="{StaticResource SettingDescriptionStyle}" 
                               Grid.Row="1" 
                               Grid.Column="0" 
                               Grid.ColumnSpan="2" />
                </Grid>
            </Border>
        </DataTemplate>

        <DataTemplate x:Key="SettingTemplate">
            <ContentControl>
                <ContentControl.Style>
                    <Style TargetType="ContentControl">
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding Type}" Value="Toggle">
                                <Setter Property="ContentTemplate" Value="{StaticResource ToggleSettingTemplate}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Type}" Value="Options">
                                <Setter Property="ContentTemplate" Value="{StaticResource OptionsSettingTemplate}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Type}" Value="Text">
                                <Setter Property="ContentTemplate" Value="{StaticResource TextSettingTemplate}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Type}" Value="Numeric">
                                <Setter Property="ContentTemplate" Value="{StaticResource NumericSettingTemplate}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
                <ContentControl.Content>
                    <Binding />
                </ContentControl.Content>
            </ContentControl>
        </DataTemplate>

        <DataTemplate x:Key="CategoryTemplate">
            <Border Style="{StaticResource CardBorderStyle}">
                <StackPanel>
                    <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                        <TextBlock Text="{Binding Icon}" 
                                   FontFamily="Segoe MDL2 Assets" 
                                   FontSize="20" 
                                   VerticalAlignment="Center" 
                                   Margin="0,0,8,0" />
                        <TextBlock Text="{Binding Title}" 
                                   Style="{StaticResource CardHeaderStyle}" />
                    </StackPanel>
                    <ItemsControl ItemsSource="{Binding Settings}" 
                                  ItemTemplate="{StaticResource SettingTemplate}" />
                </StackPanel>
            </Border>
        </DataTemplate>
    </Page.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Background="{DynamicResource EFBHeaderBackgroundBrush}" 
                BorderBrush="{DynamicResource EFBHeaderBorderBrush}" 
                BorderThickness="0,0,0,1" 
                Padding="16,12" 
                Grid.Row="0">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                
                <StackPanel Orientation="Horizontal" Grid.Column="0">
                    <TextBlock Text="&#xE713;" 
                               FontFamily="Segoe MDL2 Assets" 
                               FontSize="24" 
                               VerticalAlignment="Center" 
                               Margin="0,0,12,0" />
                    <TextBlock Text="Settings" 
                               Style="{StaticResource EFBHeaderTextStyle}" 
                               VerticalAlignment="Center" 
                               Margin="0" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" Padding="8" VerticalScrollBarVisibility="Auto">
            <ItemsControl ItemsSource="{Binding SettingsCategories}" 
                          ItemTemplate="{StaticResource CategoryTemplate}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <WrapPanel />
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
            </ItemsControl>
        </ScrollViewer>

        <!-- Footer -->
        <Border Background="{DynamicResource EFBHeaderBackgroundBrush}" 
                BorderBrush="{DynamicResource EFBHeaderBorderBrush}" 
                BorderThickness="0,1,0,0" 
                Padding="16,12" 
                Grid.Row="2">
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Reset to Defaults" 
                        Style="{StaticResource SecondaryButtonStyle}" 
                        Command="{Binding ResetToDefaultsCommand}" />
                <Button Content="Save Settings" 
                        Style="{StaticResource ActionButtonStyle}" 
                        Command="{Binding SaveSettingsCommand}" />
            </StackPanel>
        </Border>
    </Grid>
</Page>
