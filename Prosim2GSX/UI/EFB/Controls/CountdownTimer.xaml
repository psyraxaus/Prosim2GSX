<UserControl x:Class="Prosim2GSX.UI.EFB.Controls.CountdownTimer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prosim2GSX.UI.EFB.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="100" d:DesignWidth="300">
    <UserControl.Resources>
        <Style x:Key="CountdownTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="24"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource CountdownForeground}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        
        <Style x:Key="LabelTextStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource CountdownLabelForeground}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,0,0,5"/>
        </Style>
        
        <Style x:Key="ProgressBarStyle" TargetType="ProgressBar">
            <Setter Property="Height" Value="5"/>
            <Setter Property="Foreground" Value="{DynamicResource CountdownProgressForeground}"/>
            <Setter Property="Background" Value="{DynamicResource CountdownProgressBackground}"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="0,5,0,0"/>
        </Style>
    </UserControl.Resources>
    
    <Border Background="{DynamicResource CountdownBackground}" 
            BorderBrush="{DynamicResource CountdownBorderBrush}" 
            BorderThickness="1" 
            CornerRadius="5"
            Padding="10">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <TextBlock x:Name="LabelText" 
                       Grid.Row="0" 
                       Text="{Binding Label, RelativeSource={RelativeSource AncestorType=local:CountdownTimer}}" 
                       Style="{StaticResource LabelTextStyle}"/>
            
            <TextBlock x:Name="CountdownText" 
                       Grid.Row="1" 
                       Text="{Binding FormattedTime, RelativeSource={RelativeSource AncestorType=local:CountdownTimer}}" 
                       Style="{StaticResource CountdownTextStyle}"/>
            
            <ProgressBar x:Name="ProgressBar" 
                         Grid.Row="2" 
                         Value="{Binding Progress, Mode=OneWay, RelativeSource={RelativeSource AncestorType=local:CountdownTimer}}" 
                         Maximum="100" 
                         Style="{StaticResource ProgressBarStyle}"/>
        </Grid>
    </Border>
</UserControl>
