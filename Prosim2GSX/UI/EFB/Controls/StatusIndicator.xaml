<UserControl x:Class="Prosim2GSX.UI.EFB.Controls.StatusIndicator"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prosim2GSX.UI.EFB.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="30" d:DesignWidth="200">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        
        <!-- Status Indicator -->
        <Ellipse x:Name="StatusEllipse" 
                 Grid.Column="0" 
                 Width="12" 
                 Height="12" 
                 Fill="{DynamicResource EFBSuccessBrush}" 
                 Margin="0,0,8,0" 
                 VerticalAlignment="Center" />
        
        <!-- Label -->
        <TextBlock x:Name="LabelText" 
                   Grid.Column="1" 
                   Text="Status" 
                   Foreground="{DynamicResource EFBForegroundBrush}" 
                   FontSize="14" 
                   VerticalAlignment="Center" />
        
        <!-- Status Text -->
        <TextBlock x:Name="StatusText" 
                   Grid.Column="2" 
                   Text="Connected" 
                   Foreground="{DynamicResource EFBSuccessBrush}" 
                   FontSize="14" 
                   FontWeight="SemiBold" 
                   VerticalAlignment="Center" 
                   HorizontalAlignment="Right" />
    </Grid>
</UserControl>
