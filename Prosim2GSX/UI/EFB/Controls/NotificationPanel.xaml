<UserControl x:Class="Prosim2GSX.UI.EFB.Controls.NotificationPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Prosim2GSX.UI.EFB.Controls"
             xmlns:notifications="clr-namespace:Prosim2GSX.UI.EFB.Notifications"
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
    <UserControl.Resources>
        <!-- Notification Panel Style -->
        <Style x:Key="NotificationPanelStyle" TargetType="Border">
            <Setter Property="Background" Value="{DynamicResource NotificationPanelBackground}"/>
            <Setter Property="BorderBrush" Value="{DynamicResource NotificationPanelBorderBrush}"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Setter Property="Padding" Value="10"/>
            <Setter Property="Margin" Value="5"/>
        </Style>
        
        <!-- Header Style -->
        <Style x:Key="HeaderStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Foreground" Value="{DynamicResource NotificationPanelHeaderForeground}"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        
        <!-- Empty Message Style -->
        <Style x:Key="EmptyMessageStyle" TargetType="TextBlock">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="{DynamicResource NotificationPanelEmptyForeground}"/>
            <Setter Property="HorizontalAlignment" Value="Center"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
            <Setter Property="TextAlignment" Value="Center"/>
            <Setter Property="Margin" Value="0,20,0,0"/>
        </Style>
        
        <!-- Clear All Button Style -->
        <Style x:Key="ClearAllButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Foreground" Value="{DynamicResource NotificationPanelButtonForeground}"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="5"/>
            <Setter Property="Margin" Value="0,0,0,10"/>
            <Setter Property="HorizontalAlignment" Value="Right"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                Padding="{TemplateBinding Padding}">
                            <StackPanel Orientation="Horizontal">
                                <TextBlock Text="&#xE74D;" 
                                           FontFamily="Segoe MDL2 Assets" 
                                           FontSize="12" 
                                           VerticalAlignment="Center" 
                                           Margin="0,0,5,0"
                                           Foreground="{TemplateBinding Foreground}"/>
                                <TextBlock Text="Clear All" 
                                           VerticalAlignment="Center"
                                           Foreground="{TemplateBinding Foreground}"/>
                            </StackPanel>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </UserControl.Resources>
    
    <Border Style="{StaticResource NotificationPanelStyle}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            
            <!-- Header -->
            <TextBlock Grid.Row="0" 
                       Text="Notifications" 
                       Style="{StaticResource HeaderStyle}"/>
            
            <!-- Clear All Button -->
            <Button Grid.Row="1" 
                    Style="{StaticResource ClearAllButtonStyle}" 
                    Click="ClearAllButton_Click"
                    Visibility="{Binding HasNotifications, Converter={StaticResource BooleanToVisibilityConverter}, RelativeSource={RelativeSource AncestorType=local:NotificationPanel}}"/>
            
            <!-- Notifications -->
            <ScrollViewer Grid.Row="2" 
                          VerticalScrollBarVisibility="Auto" 
                          HorizontalScrollBarVisibility="Disabled">
                <StackPanel x:Name="NotificationsPanel">
                    <!-- Notifications will be added here dynamically -->
                    
                    <!-- Empty Message -->
                    <TextBlock Text="No notifications" 
                               Style="{StaticResource EmptyMessageStyle}" 
                               Visibility="{Binding HasNotifications, Converter={StaticResource InverseBooleanToVisibilityConverter}, RelativeSource={RelativeSource AncestorType=local:NotificationPanel}}"/>
                </StackPanel>
            </ScrollViewer>
        </Grid>
    </Border>
</UserControl>
