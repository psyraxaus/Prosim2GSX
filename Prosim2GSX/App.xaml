<Application x:Class="Prosim2GSX.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Prosim2GSX"
             xmlns:converters="clr-namespace:Prosim2GSX.UI.EFB.Converters"
             ShutdownMode="OnExplicitShutdown"
             >
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="NotifyIconResources.xaml" />
                <ResourceDictionary Source="/Prosim2GSX;component/UI/EFB/Styles/EFBStyles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- EFB Converters -->
            <converters:BooleanToCornerRadiusConverter x:Key="BoolToCornerRadiusConverter" />
            <converters:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter" />
            <converters:BooleanToVisibilityConverter x:Key="InverseBooleanToVisibilityConverter" Invert="True" />
            <converters:BooleanConverter x:Key="InverseBooleanConverter" Invert="True" />
            <converters:BooleanToStatusConverter x:Key="BooleanToStatusConverter" />
            <converters:BooleanToStatusMessageConverter x:Key="BooleanToStatusMessageConverter" />
            <converters:ProgressToVisibilityConverter x:Key="ProgressToVisibilityConverter" />
            <converters:InverseRotateTransformConverter x:Key="InverseRotateTransformConverter" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
